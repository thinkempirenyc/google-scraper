{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "target": "es2019",
    "isolatedModules": false,
    "composite": false,
    "experimentalDecorators": true,
    "incremental": true,
    "emitDecoratorMetadata": true,
    "outDir": "build",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src/**/*.ts",
  ]
}
